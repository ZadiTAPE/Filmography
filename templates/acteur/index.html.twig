{% extends 'base.html.twig' %}

{% block title %}Liste des Acteurs{% endblock %}

{% block body %}
    <h1>LISTES DES ACTEURS</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Date de Naissance</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for acteur in acteurs %}
            <tr>
                <td>{{ acteur.id }}</td>
                <td>{{ acteur.nom }}</td>
                <td>{{ acteur.dateNaissance ? acteur.dateNaissance|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_acteur_show', {'id': acteur.id}) }}">show</a>
                    <a href="{{ path('app_acteur_edit', {'id': acteur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_acteur_new') }}">Create new</a>
{% endblock %}
